<?xml version="1.0" encoding="UTF-8"?>

<decorators defaultdir="/WEB-INF/sitemesh">
    <excludes>
        <pattern>*/export.*</pattern>
        <pattern>*/tags.*</pattern>
    </excludes>
    <decorator name="login-layout" page="login-layout.jsp">
        <pattern>/login.jsp</pattern>
    </decorator>
    <decorator name="simple-layout" page="simple-layout.jsp">
        <pattern>/cms/fileBrowser.jsp</pattern>
    </decorator>
    <decorator name="layout" page="layout.jsp">
        <pattern>/cms/*.jsp</pattern>
    </decorator>
</decorators>