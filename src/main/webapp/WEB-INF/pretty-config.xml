<pretty-config
    xmlns="http://ocpsoft.com/prettyfaces-xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://ocpsoft.com/prettyfaces-xsd 
    http://ocpsoft.com/xml/ns/prettyfaces/pretty-1.0.xsd">
    
    <url-mapping id="login">
        <pattern>/login</pattern>
        <view-id>/login.jsf</view-id>
    </url-mapping>

    <url-mapping id="logout">
        <pattern>/cms/logout</pattern>
        <view-id>/login.jsf</view-id>
        <action>#{loginBean.logout}</action>
    </url-mapping>

    <url-mapping id="cms">
        <pattern>/cms</pattern>
        <view-id>/home.jsf</view-id>
    </url-mapping>

    <url-mapping id="config">
        <pattern>/cms/config</pattern>
        <view-id>/config.jsf</view-id>
    </url-mapping>

    <url-mapping id="plugins">
        <pattern>/cms/plugins</pattern>
        <view-id>/plugins.jsf</view-id>
    </url-mapping>

    <url-mapping id="fileBrowser">
        <pattern>/cms/fileBrowser</pattern>
        <view-id>/fileBrowser.jsf</view-id>
    </url-mapping>

    <!-- Pages -->

    <url-mapping id="pages">
        <pattern>/cms/pages</pattern>
        <view-id>/pageList.jsf</view-id>
    </url-mapping>
    
    <url-mapping id="pageEdit">
        <pattern>/cms/page/edit/#{pageBean.id}</pattern>
        <view-id>/page.jsf</view-id>
        <action>#{pageBean.edit}</action>
    </url-mapping>

    <url-mapping id="pageCreate">
        <pattern>/cms/page/create</pattern>
        <view-id>/page.jsf</view-id>
    </url-mapping>

    <url-mapping id="pageCreateChild">
        <pattern>/cms/page/createChild/#{pageBean.id}</pattern>
        <view-id>/page.jsf</view-id>
        <action>#{pageBean.addChildParam}</action>
    </url-mapping>

    <!-- Templates -->

    <url-mapping id="templates">
        <pattern>/cms/templates</pattern>
        <view-id>/templateList.jsf</view-id>
    </url-mapping>
    
    <url-mapping id="templateEdit">
        <pattern>/cms/template/edit/#{templateBean.id}</pattern>
        <view-id>/template.jsf</view-id>
        <action>#{templateBean.edit}</action>
    </url-mapping>

    <url-mapping id="templateCreate">
        <pattern>/cms/template/create</pattern>
        <view-id>/template.jsf</view-id>
    </url-mapping>

    <!-- Folders -->

    <url-mapping id="folders">
        <pattern>/cms/folders</pattern>
        <view-id>/folderList.jsf</view-id>
    </url-mapping>
    
    <url-mapping id="folderEdit">
        <pattern>/cms/folder/edit/#{folderBean.id}</pattern>
        <view-id>/folder.jsf</view-id>
        <action>#{folderBean.edit}</action>
    </url-mapping>

    <url-mapping id="folderCreate">
        <pattern>/cms/folder/create</pattern>
        <view-id>/folder.jsf</view-id>
    </url-mapping>

    <url-mapping id="folderCreateChild">
        <pattern>/cms/folder/createChild/#{folderBean.id}</pattern>
        <view-id>/folder.jsf</view-id>
        <action>#{folderBean.addChildParam}</action>
    </url-mapping>

    <!-- Forms -->

    <url-mapping id="forms">
        <pattern>/cms/forms</pattern>
        <view-id>/formList.jsf</view-id>
    </url-mapping>
    
    <url-mapping id="formEdit">
        <pattern>/cms/form/edit/#{formBean.id}</pattern>
        <view-id>/form.jsf</view-id>
        <action>#{formBean.edit}</action>
    </url-mapping>

    <url-mapping id="formCreate">
        <pattern>/cms/form/create</pattern>
        <view-id>/form.jsf</view-id>
    </url-mapping>

    <!-- File view -->

    <url-mapping id="fileCreate">
        <pattern>/cms/file/create/#{fileBean.folderId}</pattern>
        <view-id>/fileView.jsf</view-id>
        <action>#{fileBean.create}</action>
    </url-mapping>

    <url-mapping id="fileEdit">
        <pattern>/cms/file/edit/#{fileBean.id}</pattern>
        <view-id>/fileView.jsf</view-id>
        <action>#{fileBean.edit}</action>
    </url-mapping>
    
    <url-mapping id="fileUpdate">
        <pattern>/cms/file/update</pattern>
        <view-id>/fileView.jsf</view-id>
    </url-mapping>

</pretty-config>